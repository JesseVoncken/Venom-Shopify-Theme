  "name": "Product Spotlight",
  "settings": [
    { "type": "header", "content": "Product Source" },
    { "type": "product", "id": "product", "label": "Select Product" },
    {
      "type": "paragraph",
      "content": "Slider uses product images automatically unless 'Gallery Image' blocks are added."
    },

    { "type": "header", "content": "Text Content" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Featured Product Spotlight" },
    { "type": "text", "id": "title", "label": "Main Title (White)", "default": "V2 AGGRESSIVE" },
    { "type": "text", "id": "title_highlight", "label": "Highlight Title (Blue)", "default": "HAT MAN" },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our most detailed figure yet. Engineered for perfection."
    },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "GET YOURS NOW" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Box",
      "limit": 4,
      "settings": [
        { "type": "text", "id": "heading", "label": "Feature Heading", "default": "High Quality Print" },
        { "type": "text", "id": "text", "label": "Description", "default": "UV print on genuine pieces" },
        { "type": "url", "id": "link", "label": "Link (Optional)" },
        { "type": "header", "content": "Styling" },
        { "type": "color", "id": "bg_color", "label": "Background", "default": "#1a1a1a" },
        { "type": "color", "id": "border_color", "label": "Border", "default": "#333333" },
        { "type": "color", "id": "text_color", "label": "Text Color", "default": "#ffffff" }
      ]
    },
    {
      "type": "gallery_image",
      "name": "Gallery Image",
      "settings": [{ "type": "image_picker", "id": "image", "label": "Image" }]
    }
  ],
  "presets": [
    {
      "name": "Product Spotlight",
      "blocks": [
        { "type": "feature", "settings": { "heading": "High Quality", "border_color": "#333" } },
        { "type": "feature", "settings": { "heading": "Custom Resin", "border_color": "#333" } }
      ]
    }
  ]
}
{% endschema %}
