{% comment %}
  Section: Venom Product Spotlight (Gallery Slider + Nav)
  Description: Two-column spotlight with an image slider, "Dot & Bar" navigation, and customizable feature blocks.
{% endcomment %}

<div class="venom-spotlight-section" id="Spotlight-{{ section.id }}">
  <div class="page-width">
    <div class="spotlight-grid">
      <div class="spotlight-image-col">
        <div class="spotlight-slider-container">
          <div class="spotlight-slider-track">
            {%- assign image_blocks = section.blocks | where: 'type', 'gallery_image' -%}
            {%- assign slide_count = 0 -%}

            {%- if image_blocks.size > 0 -%}
              {%- assign slide_count = image_blocks.size -%}
              {%- for block in image_blocks -%}
                <div class="spotlight-slide" data-index="{{ forloop.index0 }}">
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="800"
                    class="spotlight-img"
                  >
                </div>
              {%- endfor -%}

            {%- elsif section.settings.product != blank and section.settings.product.images.size > 0 -%}
              {%- assign slide_count = section.settings.product.images.size | at_most: 5 -%}
              {%- for image in section.settings.product.images limit: 5 -%}
                <div class="spotlight-slide" data-index="{{ forloop.index0 }}">
                  <img
                    src="{{ image | image_url: width: 800 }}"
                    alt="{{ image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="800"
                    class="spotlight-img"
                  >
                </div>
              {%- endfor -%}

            {%- else -%}
              {%- assign slide_count = 1 -%}
              <div class="spotlight-slide" data-index="0">
                {{ 'product-1' | placeholder_svg_tag: 'spotlight-img placeholder' }}
              </div>
            {%- endif -%}
          </div>

          <button class="slider-arrow prev" aria-label="Previous slide">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <button class="slider-arrow next" aria-label="Next slide">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>

          {%- if slide_count > 1 -%}
            <div class="slider-nav-container">
              {%- for i in (1..slide_count) -%}
                <button
                  class="slider-dot {% if forloop.first %}active{% endif %}"
                  data-slide="{{ forloop.index0 }}"
                  aria-label="Go to slide {{ forloop.index }}"
                ></button>
              {%- endfor -%}
            </div>
          {%- endif -%}

          <div class="spotlight-logo-overlay">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" fill="#007bff" width="100">
              <path d="M20 20 L50 80 L80 20" stroke="white" stroke-width="5" fill="none"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="spotlight-content-col">
        {%- if section.settings.subheading != blank -%}
          <span class="spotlight-subheading">{{ section.settings.subheading | escape }}</span>
        {%- endif -%}

        <h2 class="spotlight-title">
          {{ section.settings.title | escape }}
          {%- if section.settings.title_highlight != blank -%}
            <span class="text-highlight">{{ section.settings.title_highlight | escape }}</span>
          {%- endif -%}
        </h2>

        <div class="spotlight-description">
          {{ section.settings.description }}
        </div>

        <div class="spotlight-features-grid">
          {%- assign feature_blocks = section.blocks | where: 'type', 'feature' -%}
          {%- for block in feature_blocks -%}
            {%- style -%}
              .feature-box-{{ block.id }} {
                border-color: {{ block.settings.border_color }};
                background-color: {{ block.settings.bg_color }};
              }
              .feature-box-{{ block.id }} h4 { color: {{ block.settings.text_color }}; }
              .feature-box-{{ block.id }} p { color: {{ block.settings.text_color | color_modify: 'alpha', 0.7 }}; }
            {%- endstyle -%}

            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="feature-box feature-box-{{ block.id }} is-link">
            {%- else -%}
              <div class="feature-box feature-box-{{ block.id }}">
            {%- endif -%}

            <h4 class="feature-title">{{ block.settings.heading | escape }}</h4>
            <p class="feature-text">{{ block.settings.text | escape }}</p>

            {%- if block.settings.link != blank -%}
              </a>
            {%- else -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <div class="spotlight-action-row">
          <span class="spotlight-price">
            {%- if section.settings.product != blank -%}
              {{ section.settings.product.price | money }}
            {%- else -%}
              $40.00
            {%- endif -%}
          </span>

          <a href="{{ section.settings.product.url | default: '#' }}" class="spotlight-button">
            {{ section.settings.button_label | escape }}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .venom-spotlight-section {
    background-color: #000000;
    padding: 80px 0;
    color: white;
    overflow: hidden;
  }

  .spotlight-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  /* --- SLIDER STYLES --- */
  .spotlight-slider-container {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background-color: #111;
    border: 1px solid #222;
    aspect-ratio: 1 / 1;
  }

  /* CSS Scroll Snap Slider */
  .spotlight-slider-track {
    display: flex;
    width: 100%;
    height: 100%;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    scrollbar-width: none;
  }
  .spotlight-slider-track::-webkit-scrollbar {
    display: none;
  }

  .spotlight-slide {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    scroll-snap-align: center;
  }

  .spotlight-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Arrows */
  .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.6);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    z-index: 5;
    transition: background 0.3s;
  }
  .slider-arrow:hover {
    background: #007bff;
    border-color: #007bff;
  }
  .slider-arrow.prev {
    left: 15px;
  }
  .slider-arrow.next {
    right: 15px;
  }

  /* Navigation Indicators (Dot & Bar) */
  .slider-nav-container {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 8px;
    z-index: 5;
    padding: 5px 10px;
    border-radius: 20px;
    backdrop-filter: blur(2px);
  }

  .slider-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.4);
    border: none;
    padding: 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  /* The Active Bar Style */
  .slider-dot.active {
    width: 30px; /* Stretch to bar */
    background-color: #007bff; /* Blue color */
    border-radius: 5px;
    opacity: 1;
  }

  /* Logo Overlay */
  .spotlight-logo-overlay {
    position: absolute;
    bottom: 20px;
    right: 20px;
    opacity: 0.8;
    pointer-events: none;
    mix-blend-mode: overlay;
    z-index: 4;
  }

  /* --- RIGHT COLUMN --- */
  .spotlight-subheading {
    display: block;
    font-size: 14px;
    color: #007bff;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
    font-weight: bold;
  }

  .spotlight-title {
    font-size: 48px;
    line-height: 1;
    font-weight: 900;
    text-transform: uppercase;
    margin: 0 0 20px 0;
  }
  .text-highlight {
    color: #007bff;
  }

  .spotlight-description {
    font-size: 16px;
    line-height: 1.6;
    color: #ccc;
    margin-bottom: 30px;
    max-width: 90%;
  }

  /* --- FEATURE BOXES --- */
  .spotlight-features-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-bottom: 40px;
  }
  .feature-box {
    border: 1px solid;
    border-radius: 8px;
    padding: 15px 20px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    text-decoration: none;
    display: block;
  }
  .feature-box.is-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
  }
  .feature-title {
    margin: 0 0 5px 0;
    font-size: 16px;
    font-weight: bold;
  }
  .feature-text {
    margin: 0;
    font-size: 13px;
    line-height: 1.4;
  }

  /* --- ACTION ROW --- */
  .spotlight-action-row {
    display: flex;
    align-items: center;
    gap: 30px;
    border-top: 1px solid #222;
    padding-top: 30px;
  }
  .spotlight-price {
    font-size: 32px;
    font-weight: 900;
    color: white;
    letter-spacing: -1px;
  }
  .spotlight-button {
    background-color: #007bff;
    color: white;
    padding: 15px 30px;
    font-weight: bold;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 4px;
    display: inline-flex;
    align-items: center;
    transition: background 0.3s ease;
  }
  .spotlight-button:hover {
    background-color: #0056b3;
  }
  .spotlight-button svg {
    margin-left: 8px;
  }

  @media (max-width: 900px) {
    .spotlight-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    .spotlight-title {
      font-size: 36px;
    }
  }
  @media (max-width: 600px) {
    .spotlight-features-grid {
      grid-template-columns: 1fr;
    }
    .spotlight-action-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Isolate this specific section
    const section = document.querySelector('#Spotlight-{{ section.id }}');
    const track = section.querySelector('.spotlight-slider-track');
    const prevBtn = section.querySelector('.slider-arrow.prev');
    const nextBtn = section.querySelector('.slider-arrow.next');
    const dots = section.querySelectorAll('.slider-dot');

    if (track) {
      // 1. Handle Arrow Clicks
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          track.scrollBy({ left: track.clientWidth, behavior: 'smooth' });
        });
      }
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          track.scrollBy({ left: -track.clientWidth, behavior: 'smooth' });
        });
      }

      // 2. Handle Dot Clicks
      dots.forEach((dot) => {
        dot.addEventListener('click', (e) => {
          const index = parseInt(e.target.dataset.slide);
          const slideWidth = track.clientWidth;
          track.scrollTo({ left: slideWidth * index, behavior: 'smooth' });
        });
      });

      // 3. Update Active Dot on Scroll
      track.addEventListener('scroll', () => {
        // Calculate current index based on scroll position
        const index = Math.round(track.scrollLeft / track.clientWidth);

        // Remove active class from all dots
        dots.forEach((dot) => dot.classList.remove('active'));

        // Add active class to current dot (if exists)
        if (dots[index]) {
          dots[index].classList.add('active');
        }
      });
    }
  });
</script>

{% schema %}
