{% comment %}
  Section: Venom Product Spotlight
  Description: A two-column feature section with product highlights, feature boxes, and dynamic product data.
{% endcomment %}

<div class="venom-spotlight-section">
  <div class="page-width">
    <div class="spotlight-grid">
      <div class="spotlight-image-col">
        <div class="spotlight-image-wrapper">
          <a href="{{ section.settings.product.url }}">
            {%- if section.settings.custom_image != blank -%}
              <img
                src="{{ section.settings.custom_image | image_url: width: 800 }}"
                alt="{{ section.settings.custom_image.alt | escape }}"
                loading="lazy"
                width="800"
                height="800"
                class="spotlight-img"
              >
            {%- elsif section.settings.product != blank -%}
              <img
                src="{{ section.settings.product.featured_image | image_url: width: 800 }}"
                alt="{{ section.settings.product.title | escape }}"
                loading="lazy"
                width="800"
                height="800"
                class="spotlight-img"
              >
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'spotlight-img placeholder' }}
            {%- endif -%}

            <div class="spotlight-logo-overlay">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" fill="#007bff" width="100">
                <path d="M20 20 L50 80 L80 20" stroke="white" stroke-width="5" fill="none"/>
              </svg>
            </div>
          </a>
        </div>
      </div>

      <div class="spotlight-content-col">
        {%- if section.settings.subheading != blank -%}
          <span class="spotlight-subheading">{{ section.settings.subheading | escape }}</span>
        {%- endif -%}

        <h2 class="spotlight-title">
          {{ section.settings.title | escape }}
          {%- if section.settings.title_highlight != blank -%}
            <span class="text-highlight">{{ section.settings.title_highlight | escape }}</span>
          {%- endif -%}
        </h2>

        <div class="spotlight-description">
          {{ section.settings.description }}
        </div>

        <div class="spotlight-features-grid">
          {%- for block in section.blocks -%}
            <div class="feature-box">
              <h4 class="feature-title">{{ block.settings.heading | escape }}</h4>
              <p class="feature-text">{{ block.settings.text | escape }}</p>
            </div>
          {%- endfor -%}
        </div>

        <div class="spotlight-action-row">
          <span class="spotlight-price">
            {%- if section.settings.product != blank -%}
              {{ section.settings.product.price | money }}
            {%- else -%}
              $40.00
            {%- endif -%}
          </span>

          <a href="{{ section.settings.product.url | default: '#' }}" class="spotlight-button">
            {{ section.settings.button_label | escape }}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .venom-spotlight-section {
    background-color: #000000;
    padding: 80px 0;
    color: white;
    overflow: hidden;
  }

  .spotlight-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  /* --- LEFT COLUMN: IMAGE --- */
  .spotlight-image-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background-color: #111;
    border: 1px solid #222;
    aspect-ratio: 1 / 1;
  }

  .spotlight-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .spotlight-img.placeholder {
    padding: 100px;
    fill: #333;
  }

  .spotlight-logo-overlay {
    position: absolute;
    bottom: 20px;
    right: 20px;
    opacity: 0.8;
    pointer-events: none;
    /* This creates the watermark look */
    mix-blend-mode: overlay;
  }

  /* --- RIGHT COLUMN: CONTENT --- */
  .spotlight-subheading {
    display: block;
    font-size: 14px;
    color: #007bff;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
    font-weight: bold;
  }

  .spotlight-title {
    font-size: 48px;
    line-height: 1;
    font-weight: 900;
    text-transform: uppercase;
    margin: 0 0 20px 0;
  }

  .text-highlight {
    display: block; /* Makes the highlighted text break to a new line nicely if needed, or inline */
    color: #007bff;
  }

  .spotlight-description {
    font-size: 16px;
    line-height: 1.6;
    color: #ccc;
    margin-bottom: 30px;
    max-width: 90%;
  }

  /* --- FEATURE BOXES --- */
  .spotlight-features-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-bottom: 40px;
  }

  .feature-box {
    background-color: #1a1a1a;
    border: 1px solid #333;
    border-radius: 8px;
    padding: 15px 20px;
  }

  .feature-title {
    margin: 0 0 5px 0;
    font-size: 16px;
    font-weight: bold;
    color: white;
  }

  .feature-text {
    margin: 0;
    font-size: 13px;
    color: #888;
    line-height: 1.4;
  }

  /* --- ACTION ROW --- */
  .spotlight-action-row {
    display: flex;
    align-items: center;
    gap: 30px;
    border-top: 1px solid #222;
    padding-top: 30px;
  }

  .spotlight-price {
    font-size: 32px;
    font-weight: 900;
    color: white;
    letter-spacing: -1px;
  }

  .spotlight-button {
    background-color: #007bff;
    color: white;
    padding: 15px 30px;
    font-weight: bold;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 4px;
    display: inline-flex;
    align-items: center;
    transition: background 0.3s ease;
  }

  .spotlight-button:hover {
    background-color: #0056b3;
  }

  .spotlight-button svg {
    margin-left: 8px;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 900px) {
    .spotlight-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    .spotlight-title {
      font-size: 36px;
    }
    .text-highlight {
      display: inline;
    }
  }

  @media (max-width: 600px) {
    .spotlight-features-grid {
      grid-template-columns: 1fr; /* Stack feature boxes on mobile */
    }
    .spotlight-action-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
  }
</style>

{% schema %}
{
  "name": "Product Spotlight",
  "settings": [
    {
      "type": "header",
      "content": "Product Source"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Select Product"
    },
    {
      "type": "image_picker",
      "id": "custom_image",
      "label": "Custom Image",
      "info": "Optional. Overrides the product's default image."
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Featured Product Spotlight"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title (White)",
      "default": "V2 AGGRESSIVE"
    },
    {
      "type": "text",
      "id": "title_highlight",
      "label": "Highlight Title (Blue)",
      "default": "HAT MAN"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our most detailed figure yet. Engineered for perfection with 360 industrial UV printing."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "GET YOURS NOW"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Box",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Feature Heading",
          "default": "High Quality Print"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Description",
          "default": "UV print on genuine pieces"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Spotlight",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "heading": "High Quality Print",
            "text": "High Quality UV print on genuine pieces"
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "Custom Resin Pieces",
            "text": "Custom Resin Printed Pieces Hand Painted"
          }
        }
      ]
    }
  ]
}
{% endschema %}
