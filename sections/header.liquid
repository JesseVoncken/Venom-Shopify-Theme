<header class="custom-header">
  <div class="header-container page-width">
    <div class="header__left">
      <details id="Details-menu-drawer-container" class="menu-drawer-container">
        <summary class="header__icon header__icon--menu link focus-inset" aria-label="Menu">
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-hamburger"
            >
              <line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-close"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              style="display:none;"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </span>
        </summary>
        <div id="menu-drawer" class="menu-drawer" tabindex="-1">
          <nav class="menu-drawer__navigation">
            <ul class="menu-drawer__menu list-menu" role="list">
              {%- for link in section.settings.menu.links -%}
                <li>
                  <a href="{{ link.url }}" class="menu-drawer__menu-item link link--text">{{ link.title | escape }}</a>
                  {%- if link.links != blank -%}
                    <ul class="menu-drawer__submenu" style="padding-left: 20px;">
                      {%- for childlink in link.links -%}
                        <li>
                          <a
                            href="{{ childlink.url }}"
                            class="menu-drawer__menu-item link link--text"
                            style="font-size: 1.4rem;"
                          >
                            {{- childlink.title | escape -}}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        </div>
      </details>

      <button type="button" class="header__icon search-mobile-toggle" aria-label="Search">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
      </button>

      <form action="{{ routes.search_url }}" method="get" role="search" class="header__search">
        <button type="submit" class="search-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
        <input type="text" name="q" placeholder="Search Product..." class="search-input">

        <button type="button" class="search-close-mobile">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </form>
    </div>

    <div class="header__center">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 300 }}"
            alt="{{ shop.name }}"
            width="{{ section.settings.logo_width }}"
            height="auto"
            class="header__logo-image"
          >
        {% else %}
          <span class="h2" style="color: white;">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <div class="header__right">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon small-hide">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle>
          </svg>
        </a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="header__icon">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        {% if cart.item_count > 0 %}
          <div class="cart-count-bubble">
            <span>{{ cart.item_count }}</span>
          </div>
        {% endif %}
      </a>
    </div>
  </div>
</header>

<style>
  /* --- LAYOUT --- */
  .custom-header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 10;
    padding: 15px 0;
    background: transparent;
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    position: relative;
  }
  .header__left,
  .header__right {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 15px;
  }
  .header__right {
    justify-content: flex-end;
  }
  .header__center {
    flex: 1;
    text-align: center;
  }

  /* --- ICONS & TEXT --- */
  .header__icon {
    background: none;
    border: none;
    cursor: pointer;
    color: white;
    display: flex;
    align-items: center;
  }
  .icon-close {
    display: none;
  }
  details[open] .icon-hamburger {
    display: none;
  }
  details[open] .icon-close {
    display: block;
    position: fixed;
    top: 25px;
    left: 270px;
    z-index: 102;
  }

  /* --- SEARCH BAR (DESKTOP DEFAULT) --- */
  .header__search {
    display: flex;
    align-items: center;
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 5px 15px;
    width: 250px;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .search-input {
    background: transparent;
    border: none;
    color: white;
    width: 100%;
    margin-left: 8px;
    font-size: 14px;
    outline: none;
  }
  .search-input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }
  .search-icon {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
  }

  .search-mobile-toggle {
    display: none;
  } /* Hidden on desktop */

  .search-close-mobile {
    display: none;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    margin-left: 5px;
  }

  /* --- RESPONSIVE MOBILE LOGIC (UPDATED FOR UNDER-HEADER) --- */
  @media screen and (max-width: 768px) {
    .header-container {
      padding: 0 1.5rem;
    }

    /* 1. Position the bar UNDER the header */
    .header__search {
      position: absolute;
      top: 100%; /* Push to bottom edge of header */
      left: 0;
      width: 100%; /* Full width */
      z-index: 20;
      background: rgba(0, 0, 0, 0.4); /* Solid black background */
      border-radius: 0; /* Remove pill shape for container */
      padding: 15px 20px;
      border: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);

      /* Animation States */
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px); /* Start slightly higher */
      transition: all 0.3s ease;
    }

    /* 2. Show when active */
    .header__search.active {
      opacity: 1;
      visibility: visible;
      transform: translateY(0); /* Slide down to natural position */
    }

    /* 3. Show the toggle button */
    .search-mobile-toggle {
      display: flex;
    }

    /* 4. Show the Close "X" inside the bar */
    .search-close-mobile {
      display: block;
    }

    /* 5. Adjust Logo Size */
    .header__logo-image {
      max-width: 80px;
    }

    /* 6. Hide Account Icon on Mobile */
    .small-hide {
      display: none;
    }
  }

  /* --- DRAWER --- */
  .menu-drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: 30rem;
    height: 100vh;
    background-color: #000;
    z-index: 101;
    padding-top: 5rem;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  details[open] > .menu-drawer {
    transform: translateX(0);
  }
  .menu-drawer__menu-item {
    display: block;
    padding: 1rem 1rem;
    text-decoration: none;
    font-size: 1.8rem;
    color: white;
  }
  .list-menu li {
    list-style-type: none;
    text-transform: uppercase;
  }

  /* --- OVERLAY --- */
  .header__icon--menu[aria-expanded='true']:before {
    content: '';
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(2px);
    z-index: 50;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  details[open] > .header__icon--menu[aria-expanded='true']:before {
    opacity: 1;
    visibility: visible;
    cursor: default;
  }
  .cart-count-bubble {
    background-color: #0099ff;
    color: white;
    font-size: 10px;
    border-radius: 50%;
    width: 16px;
    height: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    top: -8px;
    left: -5px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const searchToggle = document.querySelector('.search-mobile-toggle');
    const searchForm = document.querySelector('.header__search');
    const searchClose = document.querySelector('.search-close-mobile');

    if (searchToggle && searchForm) {
      // Open Search
      searchToggle.addEventListener('click', function () {
        searchForm.classList.add('active');
        // Small delay to allow CSS transition to start before focusing
        setTimeout(() => searchForm.querySelector('input').focus(), 50);
      });

      // Close Search
      if (searchClose) {
        searchClose.addEventListener('click', function () {
          searchForm.classList.remove('active');
        });
      }
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "range", "id": "logo_width", "min": 50, "max": 250, "step": 5, "default": 100, "label": "Width" },
    { "type": "link_list", "id": "menu", "default": "main-menu", "label": "Menu" }
  ]
}
{% endschema %}
