{% comment %}
  Section: Category Marquee Slider
  Description: A horizontally scrolling marquee of category blocks with images, titles, and buttons.
{% endcomment %}

<div class="category-marquee-section">
  <div class="marquee-container">
    <div class="marquee-content">
      {%- for block in section.blocks -%}
        <div class="marquee-block" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="marquee-block__link">
            <div class="marquee-block__image-wrapper">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 80 }}"
                  alt="{{ block.settings.title | escape }}"
                  class="marquee-block__image"
                  loading="lazy"
                  width="80"
                  height="80"
                >
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'marquee-block__image placeholder' }}
              {%- endif -%}
            </div>
            <div class="marquee-block__content">
              <h3 class="marquee-block__title">{{ block.settings.title | escape }}</h3>
              <span class="marquee-block__button">BROWSE</span>
            </div>
          </a>
        </div>
      {%- endfor -%}
      {%- for block in section.blocks -%}
        <div class="marquee-block" aria-hidden="true">
          <a href="{{ block.settings.link }}" class="marquee-block__link">
            <div class="marquee-block__image-wrapper">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 80 }}"
                  alt="{{ block.settings.title | escape }}"
                  class="marquee-block__image"
                  loading="lazy"
                  width="80"
                  height="80"
                >
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'marquee-block__image placeholder' }}
              {%- endif -%}
            </div>
            <div class="marquee-block__content">
              <h3 class="marquee-block__title">{{ block.settings.title | escape }}</h3>
              <span class="marquee-block__button">BROWSE</span>
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .category-marquee-section {
    background-color: #003366; /* Dark blue background */
    padding: 20px 0;
    overflow: hidden;
  }

  .marquee-container {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
  }

  .marquee-content {
    display: inline-flex;
    animation: marquee {{ section.settings.speed }}s linear infinite;
  }

  .marquee-container:hover .marquee-content {
    animation-play-state: paused;
  }

  .marquee-block {
    flex: 0 0 auto;
    width: 300px; /* Adjust block width as needed */
    margin-right: 20px;
    background-color: #0a2342; /* Slightly lighter dark blue for blocks */
    border-radius: 8px;
    overflow: hidden;
  }

  .marquee-block__link {
    display: flex;
    align-items: center;
    padding: 15px;
    text-decoration: none;
    color: white;
  }

  .marquee-block__image-wrapper {
    flex: 0 0 80px;
    height: 80px;
    margin-right: 15px;
    border-radius: 8px;
    overflow: hidden;
    background-color: #1c3a5e;
  }

  .marquee-block__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .marquee-block__image.placeholder {
    background-color: #1c3a5e;
    fill: #3a5a85;
  }

  .marquee-block__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .marquee-block__title {
    margin: 0 0 10px 0;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    white-space: normal; /* Allow title to wrap if needed */
  }

  .marquee-block__button {
    display: inline-block;
    padding: 8px 16px;
    background-color: white;
    color: #0a2342;
    font-size: 12px;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 4px;
    text-align: center;
    width: fit-content;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%); /* Move by half the total width (original blocks) */
    }
  }
</style>

{% schema %}
